@model List<Creditpayment>;
<form id="list_payment_form" method="post" class="row">
    <div class="conteiner">
        <div class="row pt-4">
            <div class="col-6">
                <h2>
                    Платежі по кредитах
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Parents" asp-action="AddPayment" asp-route-creditId="@ViewBag.CreditId" class="btn btn-dark">
                    <i class="bi bi-plus-circle-fill"></i> Додати Платіж
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <tr>
                <th>Дата</th>
                <th>Сума платежу</th>
                <th>Дії</th>
            </tr>
            @foreach (var payment in Model)
            {
                <tr>
                    <td>@payment.Date?.ToString("yyyy-MM-dd")</td>
                    <td>@payment.Amount</td>
                    <td>
                        <a asp-controller="Parents" asp-action="EditPayment" asp-route-id="@payment.Id" class="btn btn-info mx-2">
                            <i class="bi bi-opencollective"></i>Редагувати
                        </a>
                        <a asp-controller="Parents" asp-action="DeletePayment" asp-route-id="@payment.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-opencollective"></i>Видалити
                        </a>
                    </td>
                </tr>
            }
        </table>

        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <a asp-controller="Parents" asp-action="ListCredit" class="btn btn-outline-dark border form-control">
                    До списку кредитів
                </a>
            </div>
        </div>
    </div>
</form>