@model Transaction;
<div class="column_balance">
<form method="post" asp-action="EditTransaction" class="row">
    <div class="border p-3 mt-4">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2>Редагувати транзакцію</h2>
                <hr />
            </div>
        </div>
        <div asp-validation-summary="All"></div>

        <input type="hidden" asp-for="Id" />

        <div class="mb-3 row p-1">
            <label asp-for="CategoryId" class="p-0"></label>
            <select asp-for="CategoryId" class="form-control">
                @foreach (var category in ViewBag.Categories as List<Category>)
                {
                    <option value="@category.Id" selected="@(Model.CategoryId == category.Id ? "selected" : null)">@category.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Type" class="p-0"></label>
            <div class="d-flex">
                <button type="button" class="btn btn-primary me-2" onclick="document.getElementById('Type').value='income'">Income</button>
                <button type="button" class="btn btn-secondary" onclick="document.getElementById('Type').value='expense'">Expense</button>
            </div>
            <input type="hidden" asp-for="Type" id="Type" value="@Model.Type" />
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Amount" class="p-0"></label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="Date" class="p-0"></label>
            <input asp-for="Date" type="date" class="form-control" value="@Model.Date?.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>

        <div class="row pt-2">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-dark form-control">Зберегти</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Parents" asp-action="ListTransaction" class="btn btn-outline-dark border form-control">
                    До списку транзакцій
                </a>
            </div>
        </div>
    </div>
</form>
</div>