@model User
<div class="column_balance">
    <form method="post" asp-action="EditUser" class="row">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2>Редагувати користувача</h2>
                <hr />
            </div>

            <div asp-validation-summary="All"></div>

            <!-- Поле для передачі Id -->
            <input type="hidden" name="Id" value="@ViewBag.Id" />

            <div class="mb-3 row p-1">
                <label asp-for="Name" class="p-0">Ім'я користувача</label>
                <input asp-for="Name" class="form-control" readonly />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Password" class="p-0">Пароль</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Залиште порожнім, якщо не змінюється" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Role" class="p-0">Роль</label>
                <select asp-for="Role" class="form-control">
                    @foreach (var role in ViewBag.Roles as List<string>)
                    {
                        if (Model.Role == role)
                        {
                            <option value="@role" selected="selected">@role</option>
                        }
                        else
                        {
                            <option value="@role">@role</option>
                        }
                    }

                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="mb-3 row p-1">
                <label asp-for="Balance" class="p-0">Баланс</label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-dark form-control">Зберегти</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark border form-control">
                        До головної сторінки
                    </a>
                </div>
            </div>

            
        </div>
    </form>
    <div class="row pt-2">
        <div class="col-6 col-md-3">
            <form method="post" asp-action="DeleteUser">
                <input type="hidden" name="id" value="@ViewBag.Id" />
                <button type="submit" class="btn btn-danger form-control">Видалити користувача</button>
            </form>
        </div>
    </div>
</div>
